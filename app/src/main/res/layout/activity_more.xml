<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e5dcdc"
    tools:context="creativej.gymtrainer.MoreActivity">

    <include layout="@layout/app_bar" android:id="@+id/app_bar_more"></include>


    <ListView
        android:id="@+id/listview_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#fc3c3c"
        android:dividerHeight="1.0sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@+id/app_bar_more">

    </ListView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_below="@+id/app_bar_more">
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId=" ca-app-pub-4996416652632375/3197340459">
    </com.google.android.gms.ads.AdView>
    </RelativeLayout>
</RelativeLayout>
